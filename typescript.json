        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./",
        "rootDir":"./",
